<% if @anoymose_ftp == true %>
anonymous_enable=YES
<% else %>
anonymous_enable=NO
<% end %>

ftpd_banner=<%= @ftp_banner_message %>

local_enable=YES
write_enable=YES
chroot_local_user=YES
local_umask=022
dirmessage_enable=YES

xferlog_enable=YES
connect_from_port_20=YES
xferlog_std_format=YES
listen=YES
pam_service_name=vsftpd
tcp_wrappers=YES

userlist_enable=YES